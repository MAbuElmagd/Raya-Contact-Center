<odoo>
    <data>
        <record id="message_wizard_form" model="ir.ui.view">
            <field name="name">message.wizard.form</field>
            <field name="model">message.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <form >
                <group>
                  <field name="message" readonly="1"/>
                </group>
                <group>
                    <field name="terminated"/>
                </group>

                <footer>
                    <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight" attrs="{'invisible':[('terminated','=','False')]}"/>
                     <button string="Cancel" special="cancel"/>
                </footer>
              </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="message_wizard_window_form_action">
            <field name="name">Terminate</field>
            <field name="res_model">message.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
