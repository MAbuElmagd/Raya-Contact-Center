    <record id="wc_referral_program_app" model="ir.ui.view">
      <field name="name">wc_referral_program_app</field>
      <field name="model">hr.applicant</field>
      <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
          <page name="referral_candidate" string="Candidate's Referral" attrs="{'invisible':[('job_category','!=','operational')]}">
            <!-- <field name="job_category" invisible="1"/> -->
            <field name="referral_candidate">
              <tree editable="top">
                <field name="name" attrs="{'required':[('parent.job_category','=','operational')]}"/>
                <field name="mobile" attrs="{'required':[('parent.job_category','=','operational')]}"/>
                <field name="note"/>
              </tree>
            </field>
          </page>
          <page name="referral_bouns" string="Referral Bonus" attrs="{'invisible':['|',('job_category','!=','operational'),('referred_by_employee','=',False)]}">
            <group>
              <field name="three_days_training" force_save="1" readonly="1" invisible="1"/>
              <field name="ninty_days_training" force_save="1" readonly="1" invisible="1"/>
              <field name="fifty_three_days_training" force_save="1" readonly="1"/>
              <field name="fifty_three_days_training_payment" widget="boolean_toggle" force_save="1" attrs="{'invisible':[('fifty_three_days_training','!=','eligible')]}"/>
              <field name="fifty_ninty_days_training" force_save="1" readonly="1"/>
              <field name="fifty_ninty_days_training_payment" widget="boolean_toggle" force_save="1" attrs="{'invisible':[('fifty_ninty_days_training','!=','eligible')]}"/>
            </group>
          </page>
        </xpath>
        <field name="department_id" position="after">
          <field name="compute_fields" force_save="1"  invisible="1"/>
          <field name="referred_by_hr_id" force_save="1"  invisible="1"/>
          <field name="referred_by_employee_grade" force_save="1"  invisible="1"/>
          <field name="referred_by_employee" force_save="1" attrs="{'invisible':[('job_category','!=','operational')]}"  />
        </field>
      </field>
    </record>

