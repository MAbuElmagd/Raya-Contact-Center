<odoo>
  <data>
<record id="view_create_internal_transfer" model="ir.ui.view">
                <field name="name">internal transfer</field>
                <field name="model">internal_transfer_desc</field>
                <field name="arch" type="xml">
                    <form string="internal transfer">
                        <group>
                            <field name="desc"/>
                        </group>
                        <footer>
                            <button name="get_data" string="Confirm"
                              type="object" class="oe_highlight"/>
                            <button string="Cancel" class="btn-default" special="cancel" />
                      </footer>
                    </form>
                </field>
            </record>
<record id="open_wizard_action_id" model="ir.actions.act_window">
            <field name="name">internal transfer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">internal_transfer_desc</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            </record>
<record id="view_hr_applicant_internal_trasfer_form" model="ir.ui.view">
                    <field name="name">view.hr.applicant.form</field>
                    <field name="model">hr.applicant</field>
                    <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form" />
                    <field name="arch" type="xml">
                    <xpath expr="//header" position="inside">
                            <button name="%(open_wizard_action_id)d" type="action" string="Internal Transfer" class="oe_highlight" attrs="{'invisible':['|',('internal_transfer_counts','=',1),('internal_transfer_hold','!=',True)]}"/>
                         </xpath>
                       <xpath expr="//div[@name='button_box']" position="inside">
                                                <button name="action_view_internal_transfer_counts" type="object"
                                                                    class="oe_stat_button" icon="fa-file-text" attrs="{'invisible':[('internal_transfer_counts','=',0)]}">
                                                                    <field name="internal_transfer_counts" string="Internal Transfer" widget="statinfo"/>
                                                </button>
                                                </xpath>
                                                <field name="quality_hold" position="after">
                                                <div>
                                                <label for="internal_transfer_hold" />
                                                <field name="internal_transfer_hold" readonly="1" force_save="1" />
                                                </div>
                                                                                                <div>
                                                <label for="internal_transfer_request" />
                                                <field name="internal_transfer_request" readonly="1" force_save="1" />
                                                                                                </div>
                                                                                                                                                <div>
                                                <label for="internal_transfer" />
                                                <field name="internal_transfer" readonly="1" force_save="1" />
                                                                                                                    </div>
                                                                        </field>

                    </field>
                </record>
<record id="view_task_search_form_inherit" model="ir.ui.view">       
<field name="name">applicant search</field>       
<field name="model">hr.applicant</field>       
<field name="inherit_id" ref="hr_recruitment.hr_applicant_view_search_bis"/>       
<field name="arch" type="xml">
<xpath expr="//search/group" position="inside">
<field name="internal_transfer_hold"/>
<filter string="Internal Transfer Hold" name="Internal Transfer Hold" context="{'group_by':'internal_transfer_hold'}"/>   
</xpath>  
<field name="partner_name" position="after">
<filter string="Internal Transfer Hold" name="Internal Transfer Hold" domain="[('internal_transfer_hold','=',True)]"/>   
 </field> 
</field>
</record>


 <record model="ir.ui.view" id="assessment_center_list">
          <field name="name">Operational Internal Transfer</field>
          <field name="model">wc_raya_operational_internal_trasfer</field>
          <field name="arch" type="xml">
            <tree>
              <field name="name"/>
              <field name="app_name"/>
              <field name="job_id"/>
              <field name="stage"/>
              <field name="current_project"/>
              <field name="new_project"/>
            </tree>
          </field>
        </record>

        <record model="ir.ui.view" id="assessment_center_view_form">
        <field name="name">Operational Internal Transfer</field>
        <field name="model">wc_raya_operational_internal_trasfer</field>
        <field name="arch" type="xml">
          <form string="Assessment Center Form" class="o_applicant_form">
            <header>
            <button name="internal_transfer_approve" string="Accept" type="object" class="oe_highlight" attrs="{'invisible':['|',('stage','!=','draft'),('internal_transfer','!=',False)]}" groups="wc_raya_operational_internal_trasfer.internal_transfer_approval"/>
            <button name="internal_transfer_reject" string="Reject" type="object" class="oe_highlight" attrs="{'invisible':['|',('stage','!=','draft'),('internal_transfer','!=',False)]}" groups="wc_raya_operational_internal_trasfer.internal_transfer_approval"/>
            <field name="stage" widget="statusbar" attrs="{'invisible': [('active', '=', False)]}"/>

            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                  
                </div>
                <widget name="web_ribbon" title="Refused" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                <field name="active" invisible="1"/>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name" attrs="{'readonly':[('stage','!=','draft')],'force_save':[('stage','!=','draft')]}"/></h1>
                    <label for="app_name" class="oe_edit_only" force_save="1"/>
                    <h2><field name="app_name" readonly="1"/></h2>
                </div>
                <group>
                <group>
                <field name="job_id" readonly="1" force_save="1"/>
                <field name="emp_id" readonly="1" force_save="1"/>
                <field name="current_project" readonly="1" force_save="1"/>
                <field name="new_project" readonly="1" force_save="1"/>
                <field name="desc" readonly="1" force_save="1"/>
              <field name="internal_transfer" invisible="1"/>
                </group>
                </group>
            </sheet>
          </form>
        </field>
      </record>

    <record model="ir.actions.act_window" id="wc_raya_operational_internal_trasfer.action_window">
      <field name="name">Operational Internal Trasfer </field>
      <field name="res_model">wc_raya_operational_internal_trasfer</field>
      <field name="view_mode">tree,form,pivot</field>
    </record>


   <menuitem
						id="menu_wc_raya_operational_internal_trasfer"
						sequence="11"
						parent="wc_sourcing_extension.job_category_operational_job_par"
						action="wc_raya_operational_internal_trasfer.action_window"
				/>
  </data>
</odoo>